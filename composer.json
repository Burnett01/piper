{
  "name": "burnett01/piper",
  "description": "Piper enhances the PHP 8.5 pipe operator (|>) with support for multi-argument functions/callables.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.5"
  },
  "autoload": {
    "psr-4": {
      "Burnett01\\Piper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Burnett01\\Piper\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "stan": "phpstan analyse --configuration phpstan.neon",
    "sniff": "phpcs --standard=phpcs.xml",
    "sniff:fix": "phpcbf --standard=phpcs.xml"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
